<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter numbers"
        android:id="@+id/et1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        />

    <LinearLayout
        android:layout_width="match_parent "
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="C"
                 android:id="@+id/bc"
                 android:layout_marginLeft="10dp"
                 android:backgroundTint="#B41212"/>
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="("
                 android:layout_marginLeft="10dp"
                 android:id="@+id/bopen"
                 android:backgroundTint="#539656"/>
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text=")"
                 android:layout_marginLeft="10dp"
                 android:id="@+id/bclose"
                 android:backgroundTint="#539656"/>
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="/"
                 android:layout_marginLeft="10dp"
                 android:id="@+id/bdiv"
                 android:backgroundTint="#FF5722"/>


         </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/b7"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#800080"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_marginLeft="10dp"
                android:id="@+id/b8"
                android:backgroundTint="#800080"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_marginLeft="10dp"
                android:id="@+id/b9"
                android:backgroundTint="#800080"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginLeft="10dp"
                android:id="@+id/bmul"
                android:backgroundTint="#FF5722"/>


        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/b4"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#800080"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginLeft="10dp"
                android:id="@+id/b5"
                android:backgroundTint="#800080"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_marginLeft="10dp"
                android:id="@+id/b6"
                android:backgroundTint="#800080"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_marginLeft="10dp"
                android:id="@+id/bplus"
                android:backgroundTint="#FF5722"/>


        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/b1"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#800080"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginLeft="10dp"
                android:id="@+id/b2"
                android:backgroundTint="#800080"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginLeft="10dp"
                android:id="@+id/b3"
                android:backgroundTint="#800080"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_marginLeft="10dp"
                android:id="@+id/bsub"
                android:backgroundTint="#FF5722"/>


         </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                android:id="@+id/bac"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#B41212"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="10dp"
                android:id="@+id/b0"
                android:backgroundTint="#800080"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:layout_marginLeft="10dp"
                android:id="@+id/bdot"
                android:backgroundTint="#FF5722"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:layout_marginLeft="10dp"
                android:id="@+id/bequals"
                android:backgroundTint="#539656"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>